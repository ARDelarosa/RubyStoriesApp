<div class="story-page container py-5" style="max-width: 800px;">
  <!-- Title / Header area -->
  <header class="mb-4">
    <h1 class="story-title"><%= @story.title %></h1>

    <div class="story-meta text-muted">
      Posted <%= time_ago_in_words(@story.created_at) %> ago
      <% if @story.updated_at && @story.updated_at != @story.created_at %>
        Â· Updated <%= time_ago_in_words(@story.updated_at) %> ago
      <% end %>
    </div>
  </header>

  <!-- Body content -->
  <article class="story-body fs-5 lh-lg">
    <%= simple_format(@story.body) %>
  </article>

  <hr class="my-5">

  <!-- Action buttons -->
  <div class="d-flex flex-wrap gap-2">
    <%= link_to "Edit Story", edit_story_path(@story), class: "btn btn-outline-secondary" %>
    <%= link_to "All Stories", stories_path, class: "btn btn-outline-primary" %>
    <%= link_to "Delete Story",
                @story,
                method: :delete,
                data: { confirm: "Are you sure you want to delete this story?" },
                class: "btn btn-danger" %>
  </div>
</div>
